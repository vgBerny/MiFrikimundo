@model MiFrikimundo.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h3>Agregar Libros</h3>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Titulo</label>
        <input type="text" class="form-control" asp-for="Title" required/>
    </div>
    <div class="form-group">
        <label for="Author">Autor</label>
        <input type="text" class="form-control" asp-for="Author"/>
    </div>
    <div class="form-group">
        <label for="Saga">Saga Literaria</label>
        <input type="text" class="form-control" asp-for="Saga"/>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Agregar</button>
</form>