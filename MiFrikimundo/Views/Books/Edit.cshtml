@model MiFrikimundo.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h3>Editar Libro</h3>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Title">Titulo</label>
        <input type="text" class="form-control" asp-for="Title" required/>
    </div>
    <div class="form-group">
        <label for="Author">Autor</label>
        <input type="text" class="form-control" asp-for="Author"/>
    </div>
    <div class="form-group">
        <label for="Saga">Saga Literaria</label>
        <input type="text" class="form-control" asp-for="Saga" />
    </div>
    <div class="form-group">
        <label for="GenderId">Genero</label>
        <select asp-for="GenderId" asp-items="ViewBag.Genders" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label for="Rating">Calificacion</label>
        <select asp-for="Rating" name="Rating" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    @* <div class="form-group"> *@
    @*     <label for="Created">Fecha</label> *@
    @*     <input type="date" class="form-control" asp-for="Created" /> *@
    @* </div> *@

    <button type="submit" class="btn btn-primary mt-2">Editar</button>
</form>