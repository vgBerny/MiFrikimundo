@model List<MiFrikimundo.Models.Book>
@{
    ViewData["Title"] = "Index";
}
<h3>Libros</h3>

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <form asp-controller="Books" asp-action="Index" method="get">
        <input style="width: 80%; float:left; border-top-left-radius:20%; border-bottom-left-radius:20%; background:transparent" type="text" name="searchString" class="form-control" />
        <button style="width: 20%; float: left; border: none; background: transparent; height: 40px" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
    </form>
</div>

<div>
    <form>
        <div class="button-rigth">
            <button type="button" class="btn btn-primary" onclick="window.location.href='/Books/Create'">Agregar</button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Saga</th>
            <th>Genero</th>
            <th>Calificacion</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Saga</td>
                <td>@book.Gender?.Name</td>
                <td>@book.Rating</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id">Editar</a>
                    <a asp-action="Delete" asp-route-id="@book.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>