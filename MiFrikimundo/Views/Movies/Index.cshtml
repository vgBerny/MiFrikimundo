@model List<MiFrikimundo.Models.Movie>
@{
    ViewData["Title"] = "Index";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item ms-2">
                        <h3>PELICULAS</h3>
                    </li>
                    <li class="nav-item m-md-1 ms-md-4">
                        <form asp-controller="Movies" asp-action="Index" method="get">
                            <input style="width: 80%; float:left; border-top-left-radius:20%; border-bottom-left-radius:20%; background:transparent" type="text" name="searchString" class="form-control" />
                            <button style="width: 20%; float: left; border: none; background: transparent; height: 40px" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </li>
                    <li class="nav-item ms-auto">
                        <form>
                            <div>
                                <button type="button" class="btn btn-primary custom-bg" onclick="window.location.href='/Movies/Create'">AGREGAR PELICULA</button>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<br />
<h1>Lista de Peliculas</h1>
<br />

<div class="row mb-2">
    <div class="col-md-4">
        <!-- Opciones de ordenación -->
        <a asp-action="Index" asp-route-sortOrder="rating_desc" class="btn btn-outline-secondary">Rating ↓</a>
        <a asp-action="Index" asp-route-sortOrder="rating_asc" class="btn btn-outline-secondary">Rating ↑</a>
        <a asp-action="Index" asp-route-sortOrder="date_desc" class="btn btn-outline-secondary">Fecha ↓</a>
        <a asp-action="Index" asp-route-sortOrder="date_asc" class="btn btn-outline-secondary">Fecha ↑</a>
    </div>
    <div class="col-md-3">
        <!-- Filtro por género -->
        <select name="genreId" class="form-select">
            <option value="">Todos los géneros</option>
            @foreach (var genre in ViewBag.Genres as SelectList)
            {
                <option value="@genre.Value">@genre.Text</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <!-- Botón de filtrar -->
        <button type="submit" class="btn btn-primary custom-bg">Filtrar</button>
    </div>
</div>

<br />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="card mb-3">
                        <img src="@item.ImageUrl" class="card-img-top" alt="Imagen" />
                        <div class="info">
                            <h2>@item.Title</h2>
                            <p class="custom-fontDirector">@item.Director</p>
                            <p>@item.Gender?.Name</p>
                            <p>@item.Created</p>
                            <p>(@item.Rating/5)</p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            <h2> | Más para explorar</h2>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-3">
                    <li class="nav-item ms-4">
                        <a class="nav-link text-dark custom-font" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item ms-4">
                        <a class="nav-link text-dark custom-font" asp-area="" asp-controller="Movies" asp-action="Index">Peliculas</a>
                    </li>
                    <li class="nav-item ms-4">
                        <a class="nav-link text-dark custom-font" asp-area="" asp-controller="Books" asp-action="Index">Libros</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


